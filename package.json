{
  "name": "btclight-social-nitter-x-bot",
  "version": "1.0.0",
  "description": "Production-ready microservice to relay BitcoinLight tweets from Nitter RSS to Telegram and Discord",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "clean": "rm -rf dist",
    "db:migrate": "node dist/db/migrate.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "undici": "^6.23.0"
  },
  "keywords": [
    "nitter",
    "rss",
    "telegram",
    "discord",
    "near",
    "twitter"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.9",
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.7",
    "fast-xml-parser": "^5.3.4",
    "node-cron": "^3.0.3",
    "pg": "^8.13.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.11.10",
    "typescript": "^5.7.2",
    "tsx": "^4.19.2"
  }
}
