# ===========================================
# NEARM Social Nitter X Bot - Environment Variables
# ===========================================

# Node environment
NODE_ENV=production

# ===========================================
# Nitter Configuration
# ===========================================
NITTER_BASE_URL=http://localhost:8180
NITTER_USERNAME=NEARMobile_app

# ===========================================
# PostgreSQL Database (Railway)
# ===========================================
DATABASE_URL=postgresql://postgres:password@host.railway.internal:5432/railway
# Or use individual variables:
# PGHOST=host.railway.internal
# PGPORT=5432
# PGUSER=postgres
# PGPASSWORD=your_password
# PGDATABASE=railway

# Connection pool settings
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT_MS=30000
DB_CONNECTION_TIMEOUT_MS=5000

# ===========================================
# Telegram Configuration
# ===========================================
TELEGRAM_BOT_TOKEN=your_tg_bot_token_here
TELEGRAM_CHANNEL_ID=your_tg_channel_id_here

# ===========================================
# Discord Configuration
# ===========================================
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CHANNEL_ID=your_discord_channel_id_here
DISCORD_ALERT_CHANNEL_ID=your_discord_alert_channel_id_here

# ===========================================
# Polling Configuration
# ===========================================
# Cron expression: Every 5 minutes, all the time
# Default: "*/5 * * * *"
POLL_CRON_EXPRESSION=*/5 * * * *

# Timezone for cron (default: system timezone)
# TZ=Europe/London

# ===========================================
# Logging Configuration
# ===========================================
# Log level: trace, debug, info, warn, error, fatal
LOG_LEVEL=info

# Enable pretty printing (development only)
LOG_PRETTY=false

# ===========================================
# Retry Configuration
# ===========================================
MAX_RETRIES=3
RETRY_DELAY_MS=1000
